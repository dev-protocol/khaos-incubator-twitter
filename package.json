{
	"name": "khaos-starter-kit",
	"private": true,
	"description": "Khaos Starter Kit",
	"scripts": {
		"test": "ava",
		"build": "tsc",
		"watch": "tsc -w",
		"pretest": "yarn build",
		"prebuild": "rimraf dist bundled",
		"postbuild": "rollup -c",
		"predeploy": "yarn build",
		"lint": "yarn lint:eslint && yarn lint:format",
		"lint:eslint": "eslint . --ext .ts,.js --fix",
		"lint:format": "prettier --write '**/*.{ts,js,json,md,yml}'",
		"deploy": "curl -X POST -F file=@bundled/index.js 'https://ipfs.infura.io:5001/api/v0/add?pin=true'",
		"prepare": "husky install"
	},
	"dependencies": {
		"@devprotocol/khaos-core": "1.6.0",
		"@devprotocol/util-ts": "2.2.1",
		"@types/sinon": "10.0.12",
		"axios": "0.27.2",
		"ethers": "5.6.9",
		"ramda": "0.28.0",
		"sinon": "14.0.0",
		"yarn": "1.22.19"
	},
	"devDependencies": {
		"@ava/typescript": "1.1.1",
		"@rollup/plugin-commonjs": "22.0.1",
		"@rollup/plugin-json": "4.1.0",
		"@rollup/plugin-node-resolve": "13.3.0",
		"@types/node": "16.11.42",
		"@types/ramda": "0.28.14",
		"@typescript-eslint/eslint-plugin": "5.30.3",
		"@typescript-eslint/parser": "5.30.3",
		"ava": "3.15.0",
		"eslint": "7.32.0",
		"eslint-config-prettier": "8.5.0",
		"eslint-plugin-functional": "3.7.2",
		"esm": "3.2.25",
		"husky": "7.0.4",
		"prettier": "2.7.1",
		"rimraf": "3.0.2",
		"rollup": "2.75.7",
		"rollup-plugin-terser": "7.0.2",
		"typescript": "4.7.4"
	},
	"ava": {
		"require": [
			"esm"
		],
		"files": [
			"**/*.test.ts"
		],
		"typescript": {
			"rewritePaths": {
				"src/": "dist/"
			}
		}
	}
}
